<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'books/new', book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <thbody>
        <% @users.each do |user| %>
          <tr>
            <td scope="row"><%= image_tag @user.get_profile_image(100,100) %></td>
            <td scope="row"><%= user.name %></td>
            <td scope="row"><%= link_to "Show", user_path(@user.id) %></td>
          </tr>
        <% end %>
        </thbody>
      </table>
    </div>
  </div>
</div>