<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <div class="error">
        <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        </div>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <h6><label for="userName">Name</label></h6>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <h6><label for="userImage">Image</label></h6>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <h6><label for="userIntroduction">Introduction</label></h6>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>