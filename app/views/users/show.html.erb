<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/new', new_book: Book.new, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <!--<th colspan="1"></th>-->
          </tr>
        </thead>
        <thbody>
        <% @books.each do |book| %>
          <tr>
            <td scope="row">
              <%=link_to user_path(book.user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %></td>
              <% end %>
            <td scope="row">
              <%=link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td scope="row"><%= book.body %></td>
          </tr>
        <% end %>
        </thbody>
      </table>
  </div>
</div>