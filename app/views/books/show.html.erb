<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'new', new_book: Book.new, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover">
          <thbody>
            <tr>
              <td scope="row">
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(100,100) %>
                  <p><%= @book.user.name %></p>
                <% end %>
              </td>
              <td scope="row">
                <%=link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td scope="row"><%= @book.body %></td>
              <% if @user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm mb-3 btn-sm" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm btn-sm mb-3" %>
                </td>
              <% end %>
            </tr>
          </thbody>
        </table>
      </div>
    </div>
  </div>
