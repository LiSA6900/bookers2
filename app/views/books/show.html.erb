<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'new', book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <table class="table table-hover">
          <thbody>
          <% @books.each do |book| %>
            <tr>
              <td scope="row">
                <%= image_tag @user.get_profile_image(100,100) %>
                <%= link_to user_path(@user.id) do %>
                  <p><%= @user.name %></p>
                <% end %>
              </td>
              <td scope="row">
                <%=link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td scope="row"><%= book.body %></td>
              <td>
                <%= link_to edit_book_path(@book.id), class: "btn btn-success btn-sm btn-block mb-3" do %>
                <span>Edit</span>
              </td>
              <td>
                <%= link_to post_book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm btn-block mb-3" %>
                <span>Destroy</span>
              </td>
            </tr>
          <% end %>
          </thbody>
        </table>
      </div>
    </div>
  </div>
