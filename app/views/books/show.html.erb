<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'new', book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <table class="table table-hover">
          <thbody>
          <% @books.each do |book| %>
            <tr>
              <td scope="row">
                <%= image_tag @user.get_profile_image(100,100) %>
                <%= link_to user_path(@user.id) do %>
                  <p><%= @user.name %></p>
                <% end %>
              </td>
              <td scope="row">
                <%=link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td scope="row"><%= book.body %></td>
              <td>
                <%= link_to "Edit", edit_book_path(book.id) %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(book.id), method: :delete %>
              </td>
            </tr>
          <% end %>
          </thbody>
        </table>
      </div>
    </div>
  </div>
